@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}
@model EC_TH2012_J.Models.SanPham
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $(document).on("click", "#nav a[href]", function () {
            $.ajax({
                url: $(this).attr("href"),
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#Comments').html(result);
                    $('html, body').animate({
                        scrollTop: $("#reviews").offset().top
                    }, 500);
                }
            });
            return false;
        });
    });
</script>

<div id="single-product">
    <div class="container">
        <div class="no-margin col-xs-12 col-sm-6 col-md-5 gallery-holder">
            <div class="product-item-holder size-big single-product-gallery small-gallery">
                <div id="owl-single-product" style="width: 370px; height: 450px;">
                    <div class="single-product-gallery-item" id="slide1">
                        <a data-rel="prettyphoto" href="@Url.Content("~/images/products/")@Model.AnhDaiDien">
                            <img class="img-responsive" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhDaiDien" style="width: 370px; height: 370px;" />
                        </a>
                    </div><!-- /.single-product-gallery-item -->
                    <div class="single-product-gallery-item" id="slide2">
                        <a data-rel="prettyphoto" href="@Url.Content("~/images/products/")@Model.AnhNen">
                            <img class="img-responsive" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhNen" style="width: 370px; height: 370px;" />
                        </a>
                    </div><!-- /.single-product-gallery-item -->
                    <div class="single-product-gallery-item" id="slide3">
                        <a data-rel="prettyphoto" href="@Url.Content("~/images/products/")@Model.AnhKhac">
                            <img class="img-responsive" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhKhac" style="width: 370px; height: 370px;" />
                        </a>
                    </div><!-- /.single-product-gallery-item -->
                </div><!-- /.single-product-slider -->

                <div class="single-product-gallery-thumbs gallery-thumbs">
                    <div id="owl-single-product-thumbnails">
                        <a class="horizontal-thumb active" data-target="#owl-single-product" data-slide="0" href="#slide1">
                            <img style="width: 65px; height: 65px;" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhDaiDien" />
                        </a>
                        <a class="horizontal-thumb" data-target="#owl-single-product" data-slide="1" href="#slide2">
                            <img style="width: 65px; height: 65px;" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhNen" />
                        </a>
                        <a class="horizontal-thumb" data-target="#owl-single-product" data-slide="2" href="#slide3">
                            <img style="width: 65px; height: 65px;" alt="" src="@Url.Content("~/template/")assets/images/blank.gif" data-echo="@Url.Content("~/images/products/")@Model.AnhKhac" />
                        </a>
                    </div><!-- /#owl-single-product-thumbnails -->
                </div><!-- /.gallery-thumbs -->
            </div><!-- /.single-product-gallery -->
        </div><!-- /.gallery-holder -->
        <div class="no-margin col-xs-12 col-sm-7 body-holder">
            <div class="body">
                @*<div class="star-holder inline"><div class="star" data-score="4"></div></div>*@
                <div class="availability">
                    <label>Tình trạng:</label> @if (@Model.SoLuong > 0)
                    {<span class="available"> Còn hàng </span> }
                    else
                    {<span class="not-available">Hết hàng</span> }
                </div>
                <div class="title"><a href="#">@Model.TenSP</a></div>
                <div class="brand"></div>
                <div class="social-row">
                    <span class="st_facebook_hcount"></span>
                    <span class="st_twitter_hcount"></span>
                    <span class="st_pinterest_hcount"></span>
                </div>
                <div class="buttons-holder">
                    <label>Chia sẻ với bạn bè</label>
                </div>
                <div class="brand"></div>
                <div class="excerpt">
                    <label>Khuyến mãi:</label>
                    @if (Model.SanPhamKhuyenMais.Any())
                    {
                        <div class="text-capitalize" style="background-color: #efefef">@Html.Raw(Model.SanPhamKhuyenMais.FirstOrDefault().MoTa)</div>
                    }
                </div>
                <div class="brand"></div>
                <div class="prices">
                    <div class="price-current">@string.Format("{0:0,0}", Model.GiaTien) VNĐ</div>
                    @if (Model.GiaGoc != Model.GiaTien)
                    {<div class="price-prev">@string.Format("{0:0,0}", Model.GiaGoc) VNĐ</div>}
                </div>
                <div class="qnt-holder">
                    <div class="le-quantity">
                        <form>
                            <a class="minus" href="javascript:;"></a>
                            <input name="quantity" class="sl" readonly="readonly" type="text" value="1" />
                            <a class="plus" href="javascript:;"></a>
                        </form>
                    </div>
                    <a id="addto-cart" href="javascript:;" onclick="Addcart('@Model.MaSP',0)" class="le-button huge">Cho vào giỏ</a>
                </div><!-- /.qnt-holder -->
            </div><!-- /.body -->
        </div><!-- /.body-holder -->
    </div><!-- /.container -->
</div><!-- /.single-product -->
<!-- ========================================= SINGLE PRODUCT TAB ========================================= -->
<section id="single-product-tab">
    <div class="container">
        <div class="tab-holder">

            <ul class="nav nav-tabs simple">
                <li class="active"><a href="#description" data-toggle="tab">Mô tả</a></li>
                <li><a href="#additional-info" data-toggle="tab">Thông sô kỹ thuật</a></li>
            </ul><!-- /.nav-tabs -->
            <div class="tab-content">
                <div class="tab-pane active" id="description">
                    @Html.Raw(@Model.MoTa)
                    <div class="meta-row">
                        <div class="inline">
                            <label>Loại:</label>
                            <span><a href="@Url.Action("AdvancedSearchView", "Search", new { loai = Model.LoaiSP })">@Model.LoaiSP1.TenLoai</a></span>
                        </div><!-- /.inline -->
                        <span class="seperator">/</span>
                        <div class="inline">
                            <label>Hãng sản xuất:</label>
                            <span><a href="@Url.Action("AdvancedSearchView", "Search", new { loai = Model.HangSX })">@Model.HangSanXuat.TenHang</a></span>
                        </div><!-- /.inline -->
                    </div><!-- /.meta-row -->
                </div><!-- /.tab-pane #description -->
                <div class="tab-pane" id="additional-info">
                    <h2>Thông số kỹ thuật của @Model.TenSP</h2>
                    @Html.Action("ThongSoKyThuat", "SanPham", new { MaSP = Model.MaSP })
                </div><!-- /.tab-pane #additional-info -->
                
                </div>
        </div>
        </div>
</section>
       
@Html.Action("Loadsplienquan", "SanPham", new { maloai = @Model.LoaiSP, sl = 6 });
<!-- ========================================= RECENTLY VIEWED : END ========================================= -->
<script type="text/javascript">
    $('.le-quantity a').click(function (e) {
        e.preventDefault();
        var currentQty = $(this).parent().parent().find('input').val();
        if ($(this).hasClass('minus') && currentQty > 0) {
            $(this).parent().parent().find('input').val(parseInt(currentQty, 10) - 1);
        } else {
            if ($(this).hasClass('plus')) {
                $(this).parent().parent().find('input').val(parseInt(currentQty, 10) + 1);
            }
        }
    });
</script>